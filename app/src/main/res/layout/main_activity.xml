<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="UserName:"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="4dp"
        android:textSize="@dimen/main_activity_font"
        />



    <EditText
        android:id="@+id/player_name"
        android:hint="The any name you like."
        android:maxLength="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="36dp"
        android:padding="4dp"
        android:textSize="@dimen/main_activity_font"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="LoginAddress:"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="4dp"
        android:textSize="@dimen/main_activity_font"
        />
    <EditText
        android:id="@+id/server_address"
        android:layout_width="match_parent"
        android:text="ws://love.rockzhang.com:5678"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="36dp"
        android:padding="4dp"
        android:textSize="@dimen/main_activity_font"
        />

    <Button
        android:id="@+id/start_game_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_activity_margin"
        android:padding="@dimen/main_activity_padding"
        android:textSize="@dimen/main_activity_font"
        android:text="开始游戏"
        android:textAlignment="center" />


</LinearLayout>